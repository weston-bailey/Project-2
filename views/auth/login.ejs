<div class="d-flex justify-content-center">
  <div class="container w-50 bg-primary rounded-sm mt-2 pb-1">
    <h2>Login to your Quakebook account:</h2>
    <form action="/auth/login" method="POST"> 
      <div class="form-group w-100">
        <label for="authEmail">Email</label>
        <input id="authEmail" class="form-control form-control-sm" type="email" name="email">
      </div>
      <div class="form-group w-100">
        <label for="authPassword">Password</label>
        <input id="authPassword" class="form-control form-control-sm" type="password" name="password">
      </div>
      <!-- value="display text" -->
      <input class="btn btn-dark btn-sm" type="submit" value="submit">
    </form>
  </div>
</div>